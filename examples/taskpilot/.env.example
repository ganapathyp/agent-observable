# TaskPilot Configuration
# Copy this file to .env and update with your values

# ============================================================================
# OpenAI Configuration
# ============================================================================
OPENAI_API_KEY=your-api-key-here
OPENAI_MODEL_ID=gpt-4o-mini

# ============================================================================
# Server Configuration
# ============================================================================
PORT=8000
HOST=0.0.0.0

# ============================================================================
# File Paths Configuration
# ============================================================================
# All paths default to project root if not specified
# Use absolute paths for production deployments

# Data files (relative to project root by default)
# TASKS_FILE=.tasks.json
# METRICS_FILE=metrics.json
# TRACES_FILE=traces.jsonl
# DECISION_LOGS_FILE=decision_logs.jsonl

# Logs directory (supports Docker volume mounting)
# LOGS_DIR=logs
# DOCKER_LOGS_DIR=/var/log/taskpilot

# Configuration directories
# PROMPTS_DIR=prompts
# POLICIES_DIR=policies
# GUARDRAILS_CONFIG_DIR=guardrails
# OBSERVABILITY_DIR=observability

# ============================================================================
# Observability URLs (for API responses)
# ============================================================================
GRAFANA_URL=http://localhost:3000
PROMETHEUS_URL=http://localhost:9090
JAEGER_URL=http://localhost:16686
KIBANA_URL=http://localhost:5601

# ============================================================================
# OpenTelemetry Configuration
# ============================================================================
OTEL_ENABLED=true
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
OTEL_SERVICE_NAME=taskpilot

# ============================================================================
# Workflow Configuration
# ============================================================================
WORKFLOW_INTERVAL_SECONDS=60
